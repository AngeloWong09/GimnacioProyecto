
@page "/EntrenadorReporte"
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bienvenido a GYM FAST FORCE!</title>
    <link rel="stylesheet" href="styles.css" />
</head>

<body>
    <h1 class="title">Bienvenido a GYM FAST FORCE</h1>

    <!-- Sección para buscar por ID de Entrenador -->
    <h2>Mostrar Archivo CSV</h2>
    <div>
        <label for="searchID">Buscar por ID Entrenador:</label>
        <input type="text" id="searchID" placeholder="Ingresa el ID del Entrenador..." />
        <button onclick="filtrarPorID()">Buscar</button>
    </div>
    <br />

    <!-- Botón para cargar y mostrar la tabla desde el archivo CSV -->
    <div>
        <button onclick="mostrarTabla()">Mostrar Tabla de Clases</button>
    </div>
    <br />

    <h2>Tabla de Clases</h2>
    <table id="csvTable" border="1" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr id="tablaHeaders"></tr>
        </thead>
        <tbody id="csvTableBody"></tbody>
    </table>

    <!-- Botón para calcular la suma del precio clase -->
    <br />
    <button onclick="calcularSuma()">CALCULAR SUMA DE PRECIO CLASE</button>
    <p id="sumaTotal">Total: 0.00</p>

    <!-- Botón para volver al menú -->
    <br />
    <button onclick="volverMenu()">VOLVER AL MENÚ</button>

    <!-- Enlace al script que gestiona la lógica de la página -->
    <script>
        let datosCSV = []; // Variable global para almacenar los datos CSV cargados

        // Cargar y mostrar los datos del archivo CSV en una tabla
        function mostrarTabla() {
            const archivoCSV = 'sample-data/Clases.csv'; // Ruta del archivo CSV
            const urlConCacheBusting = archivoCSV + "?t=" + new Date().getTime();

            fetch(urlConCacheBusting)
                .then(response => response.text()) // Obtener el contenido del CSV
                .then(contenido => {
                    const lineas = contenido.split("\n"); // Separar las líneas del archivo
                    const tablaBody = document.getElementById("csvTableBody");
                    tablaBody.innerHTML = ""; // Limpiar la tabla antes de agregar nuevos datos
                    datosCSV = []; // Limpiar los datos previos

                    // Agregar los encabezados de la tabla
                    const tablaHeaders = document.getElementById("tablaHeaders");
                    tablaHeaders.innerHTML = `
                                        <th>Num Clase</th>
                                        <th>ID Clase</th>
                                        <th>ID Entrenador</th>
                                        <th>Clase</th>
                                        <th>Fecha</th>
                                        <th>Horario</th>
                                        <th>Cupos</th>
                                        <th>Precio Clase</th>
                                    `;

                    // Iterar sobre las líneas del CSV para agregar las filas de la tabla
                    lineas.forEach((linea, index) => {
                        if (linea.trim() === "" || index === 0) return; // Salta líneas vacías y la cabecera

                        const columnas = linea.split(";");
                        datosCSV.push(columnas); // Guardar los datos leídos

                        const fila = document.createElement("tr");

                        columnas.forEach((columna) => {
                            const celda = document.createElement("td");
                            celda.textContent = columna.trim();
                            fila.appendChild(celda);
                        });

                        tablaBody.appendChild(fila); // Agregar la fila a la tabla
                    });
                })
                .catch(error => {
                    alert("Hubo un problema al cargar el archivo Clases.csv.");
                });
        }

        // Filtrar y mostrar datos según el ID de Entrenador proporcionado
        function filtrarPorID() {
            const idBuscada = document.getElementById("searchID").value.trim();
            if (idBuscada === "") {
                alert("Por favor ingrese un ID de Entrenador para buscar.");
                return;
            }

            const tablaBody = document.getElementById("csvTableBody");
            tablaBody.innerHTML = ""; // Limpiar los resultados previos

            const tablaHeaders = document.getElementById("tablaHeaders");
            tablaHeaders.innerHTML = `
                                <th>Num Clase</th>
                                <th>ID Clase</th>
                                <th>ID Entrenador</th>
                                <th>Clase</th>
                                <th>Fecha</th>
                                <th>Horario</th>
                                <th>Cupos</th>
                                <th>Precio Clase</th>
                            `;

            let encontrado = false;

            // Filtrar las filas por el ID de Entrenador
            datosCSV.forEach((fila) => {
                if (fila[2] === idBuscada) {
                    const filaHTML = document.createElement("tr");

                    fila.forEach((columna) => {
                        const celda = document.createElement("td");
                        celda.textContent = columna.trim();
                        filaHTML.appendChild(celda);
                    });

                    tablaBody.appendChild(filaHTML);
                    encontrado = true;
                }
            });

            if (!encontrado) {
                alert("No se encontraron resultados para el ID de Entrenador proporcionado.");
            }
        }

        // Calcular la suma total del precio de las clases mostradas en la tabla
        function calcularSuma() {
            const tablaBody = document.getElementById("csvTableBody").childNodes;
            let suma = 0;

            tablaBody.forEach((fila) => {
                const precioCelda = fila.childNodes[7]; // Columna Precio Clase

                if (precioCelda) {
                    const precioTexto = precioCelda.textContent.trim().replace(/\?/g, "").replace(/\s+/g, ""); // Limpiar texto
                    const precio = parseFloat(precioTexto);

                    if (!isNaN(precio)) {
                        suma += precio; // Sumar el precio de cada clase
                    }
                }
            });

            // Mostrar la suma total
            document.getElementById("sumaTotal").textContent = `Total: ${suma.toFixed(2)}`;
        }

        // Función para redirigir al menú principal
        function volverMenu() {
            window.location.href = "/Entrenador"; // Ruta de redirección al menú principal
        }
    </script>
</body>

</html>
