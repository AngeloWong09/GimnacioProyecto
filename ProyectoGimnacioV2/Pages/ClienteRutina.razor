
@page "/ClienteRutina"

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GYM FAST FORCE!</title>
    <link rel="stylesheet" href="styles.css" />
</head>
<body>
    <h1 class="title">GYM FAST FORCE</h1>

    <div>
        <h3>Agregar Nueva Rutina</h3>
        <p>Haz clic en los campos de la tabla para agregar nuevos datos.</p>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" placeholder="Nombre" />
        <br />
        <label for="apellido">Apellido:</label>
        <input type="text" id="apellido" placeholder="Apellido" />
        <br />
        <label for="rutina">Rutina:</label>
        <select id="rutina">
            <option value="Brazos">Brazos</option>
            <option value="PechoHombros">Pecho y Hombros</option>
            <option value="Abdomen">Abdomen</option>
            <option value="Piernas">Piernas</option>
        </select>
        <br />
        <label for="repeticiones">Repeticiones:</label>
        <input type="number" id="repeticiones" placeholder="Repeticiones" />
        <br />
        <button onclick="agregarRutina()">Agregar Rutina</button>
        <div>
            <button onclick="cargarRutinas()">Mostrar Rutinas</button>
        </div>
        <br />
    </div>

    <br />

    <table id="csvTable" border="1" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>ID</th>
                <th>Rutina</th>
                <th>Repeticiones</th>
            </tr>
        </thead>
        <tbody id="csvTableBody"></tbody>
    </table>

    <br />
    <div>
        <button onclick="guardarCSV()">Guardar datos</button>
    </div>

    <br />
    <div>
        <a href="/Administrador" class="btn-primary">Volver al Menú</a>
    </div>
    <br />
    <p id="currentTime"></p>
    <script src="script.js"></script>

    <script>
        let datosCSV = [];
        let encabezadoCSV = "Nombre;Apellidos;ID;Rutina;Repeticiones";
        let idIncremental = 1400; // ID inicial

        // Función para cargar los datos de RutinaCliente.csv
        async function cargarRutinas() {
            try {
                // Agregar un parámetro con el timestamp para evitar caché
                const timestamp = new Date().getTime(); // Obtenemos el timestamp actual
                const url = `/sample-data/RutinaCliente.csv?${timestamp}`; // Agregar el parámetro en la URL

                const respuesta = await fetch(url);  // Obtener el archivo CSV con el timestamp
                if (!respuesta.ok) {
                    alert("No se pudo cargar el archivo de Rutinas.");
                    return;
                }
                const contenido = await respuesta.text();
                procesarCSVTexto(contenido);  // Procesar el contenido del archivo CSV
            } catch (error) {
                alert("Hubo un problema al cargar el archivo.");
                console.error("Error al cargar el archivo", error);  // Log del error
            }
        }

        // Procesar el contenido CSV
        function procesarCSVTexto(texto) {
            const lineas = texto.split("\n").filter((linea, index) => {
                return index > 0 && linea.trim() !== ""; // Excluye la primera línea y las vacías
            });

            datosCSV = lineas.map(linea => linea.split(";"));
            mostrarDatosActualizados();
        }

        // Mostrar los datos en la tabla
        function mostrarDatosActualizados() {
            const tablaBody = document.getElementById("csvTableBody");
            tablaBody.innerHTML = ""; // Limpiar la tabla antes de cargar los nuevos datos

            // Renderizar los datos en la tabla
            datosCSV.forEach(fila => {
                const filaTabla = document.createElement("tr");

                fila.forEach((columna) => {
                    const celda = document.createElement("td");
                    celda.textContent = columna.trim();
                    filaTabla.appendChild(celda);
                });

                tablaBody.appendChild(filaTabla); // Añadir la fila a la tabla
            });
        }

        // Función para agregar una nueva rutina
        function agregarRutina() {
            const nombre = document.getElementById("nombre").value.trim();
            const apellido = document.getElementById("apellido").value.trim();
            const rutina = document.getElementById("rutina").value;
            const repeticiones = document.getElementById("repeticiones").value.trim();

            if (!nombre || !apellido || !repeticiones) {
                alert("Por favor, complete todos los campos.");
                return;
            }

            const nuevaRutina = [
                nombre,
                apellido,
                `P${idIncremental++}`, // Generar ID de forma incremental
                rutina,
                repeticiones
            ];

            datosCSV.push(nuevaRutina);
            mostrarDatosActualizados();

            // Limpiar los campos del formulario después de agregar una rutina
            document.getElementById("nombre").value = "";
            document.getElementById("apellido").value = "";
            document.getElementById("repeticiones").value = "";
        }

        // Función para guardar los cambios en el archivo CSV
        function guardarCSV() {
            let csvContent = encabezadoCSV + "\n";  // Incluir el encabezado

            // Generar el contenido CSV de los datos
            datosCSV.forEach(filaData => {
                csvContent += filaData.join(";") + "\n";
            });

            const blob = new Blob([csvContent], { type: "text/csv;charset=utf-8;" });
            const link = document.createElement("a");
            link.href = URL.createObjectURL(blob);
            link.download = "rutinas_guardadas.csv";  // El archivo descargado llevará este nombre
            link.click();  // Simular clic en el enlace para la descarga
        }
    </script>
</body>
</html>
