    <!-- Pie de página -->
    <footer>
        <p id="currentTime"></p>  <!-- Aquí se mostrará la hora actual utilizando JavaScript -->
    </footer>

    <!-- Vinculamos el script JS externo -->
    <script src="script.js"></script>
</body>
</html>







