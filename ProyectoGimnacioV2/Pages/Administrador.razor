
@page "/Administrador"
<!DOCTYPE html>
  <!-- Indicamos que es un documento HTML5 -->
<html lang="es">
 <!-- Idioma español para la página -->
<head>
    <meta charset="UTF-8">  <!-- Definimos la codificación de caracteres en UTF-8 para soportar caracteres especiales -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Aseguramos una visualización responsiva en dispositivos móviles -->
    <title>Administrador</title> <!-- Título de la página que aparece en la pestaña del navegador -->
    <link rel="stylesheet" href="styles.css"> <!-- Vinculamos el archivo de estilos CSS -->
</head>
<body>
    <!-- Encabezado de la página que contiene el título -->
    <header>
        <h1 class="title">Bienvenido Administrador</h1>  <!-- Título visible al usuario con una clase de estilo -->
    </header>

    <!-- Contenedor principal de la página -->
    <main>
        <!-- Menú de opciones para el administrador -->
        <section class="menu-section">
            <!-- Navegación del menú de opciones -->
            <nav>
                <!-- Lista de navegación utilizando listas no ordenadas -->
                <ul class="menu-list" style="list-style: none; padding: 0;">
