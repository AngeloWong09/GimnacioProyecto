@page "/"
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administrador</title>
    <link rel="stylesheet" href="styles.css" />
</head>
<body>
    <!-- Encabezado -->
    <header>
        <button class="btn-primary logout-btn" onclick="location.href='https://www.facebook.com'" aria-label="Cerrar sesión">
            Cerrar Sesión
        </button>
        <h1 class="title">Bienvenido Administrador</h1>
    </header>

    <!-- Contenedor principal -->
    <main>
        <!-- Cambiar contraseña -->
        <section class="form-section">
            <h2>Gestiones</h2>
            <button class="btn-primary" onclick="location.href='CambiarContraseñaAdministrador'">
                Cambiar Contraseña
            </button>
        </section>

        <!-- Otras funcionalidades -->
        <section class="form-section">
            <!-- Redirige a la página Razor CambiarPuntoFuerteAdministrador -->
            <button class="btn-primary" onclick="location.href='/Administrador/CambiarPuntoFuerteAdministrador'">
                Ir a Cambiar Punto Fuerte
            </button>
        </section>

        <!-- Nuevos botones añadidos -->
        <section class="form-section">
            <button class="btn-primary" onclick="location.href='/Administrador/ControlDeInventarios'">
                Control de Inventarios
            </button>
        </section>

        <section class="form-section">
            <button class="btn-primary" onclick="location.href='/Administrador/ModificacionHorariosMatricula'">
                Modificación de Horarios de la Matrícula
            </button>
        </section>

        <section class="form-section">
            <button class="btn-primary" onclick="location.href='/Administrador/ControlDeFacturacion'">
                Control de Facturación
            </button>
        </section>

        <section class="form-section">
            <button class="btn-primary" onclick="location.href='/Administrador/Reportes'">
                Reportes
            </button>
        </section>
    </main>

    <!-- Pie de página -->
    <footer>
        <p id="currentTime"></p>
    </footer>

    <script src="script.js"></script>
</body>
</html>








