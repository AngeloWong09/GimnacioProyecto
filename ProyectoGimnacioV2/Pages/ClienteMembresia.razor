@page "/ClienteMembresia"
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GYM FAST FORCE</title>
    <link rel="stylesheet" href="styles.css" />
</head>

<body>
    <h1 class="title">GYM FAST FORCE</h1>

    <div>
        <!-- Campo de búsqueda de ID Cliente -->
        <label for="buscarID">Buscar por ID Cliente:</label>
        <input type="text" id="buscarID" placeholder="Ingresa el ID Cliente">
        <button onclick="buscarPorID()">Buscar</button>
    </div>
    <br />

    <p>Resultados de la búsqueda:</p>
    <table id="csvTable" border="1" style="width: 100%; border-collapse: collapse; display: none;">
        <thead>
            <tr>
                <th>ID Cliente</th>
                <th>Fecha de Inscripción</th>
                <th>Hora de Inscripción</th>
                <th>Fecha de Inicio</th>
                <th>Duración (meses)</th>
                <th>Plan de Membresía</th>
            </tr>
        </thead>
        <tbody id="csvTableBody"></tbody>
    </table>
    <br />

    <!-- Botón Volver al Menú como enlace -->
    <div>
        <a href="/Cliente" class="button">Volver al Menú</a>
    </div>

    <script>
        // Array para almacenar los datos del CSV
        let datosCSV = [];

        // Función para cargar el archivo Matriculas.csv
        function cargarMatriculasCSV() {
            // Añadir un parámetro único de tiempo para evitar el caché
            const archivoCSV = '/sample-data/Matriculas.csv?t=' + new Date().getTime();

            fetch(archivoCSV)
                .then(response => response.text())
                .then(contenido => {
                    const lineas = contenido.split("\n");

                    datosCSV = [];
                    for (let linea of lineas) {
                        if (linea.trim() === "") continue;

                        const columnas = linea.split(";");
                        if (columnas.length === 6) {  // Asegurarse de que tenga 6 columnas
                            datosCSV.push(columnas);
                        }
                    }
                })
                .catch(error => {
                    alert("Hubo un problema al cargar el archivo Matriculas.csv.");
                });
        }

        // Función para buscar por ID Cliente
        function buscarPorID() {
            const idCliente = document.getElementById("buscarID").value.trim();
            const tablaBody = document.getElementById("csvTableBody");
            const tabla = document.getElementById("csvTable");

            tablaBody.innerHTML = "";  // Limpiar la tabla antes de mostrar los resultados

            if (idCliente) {
                const resultados = datosCSV.filter(fila => fila[0] === idCliente);
                if (resultados.length > 0) {
                    // Mostrar la tabla
                    tabla.style.display = "table";

                    resultados.forEach(fila => {
                        const tr = document.createElement("tr");
                        fila.forEach(columna => {
                            const td = document.createElement("td");
                            td.textContent = columna.trim();
                            tr.appendChild(td);
                        });
                        tablaBody.appendChild(tr);
                    });
                } else {
                    alert("No se encontraron resultados para el ID Cliente: " + idCliente);
                }
            } else {
                alert("Por favor ingrese un ID Cliente.");
            }
        }

        // Cargar el archivo CSV cuando se carga la página
        cargarMatriculasCSV();
    </script>
</body>

</html>

