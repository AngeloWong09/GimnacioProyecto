                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>

            <br /><br />
            <!-- Botones de filtro y guardar reportes -->
            <button type="submit" class="send-btn">Filtrar por clase</button>
            <button type="submit" class="send-btn">Filtrar por horario</button>
            <button type="submit" class="send-btn">Usuarios anotados</button>
            <button type="submit" class="send-btn">Mostrar todo</button>
            <button type="submit" class="send-btn">Ver Reportes de Clases</button>
            <button type="submit" class="send-btn">Guardar Reportes</button>
